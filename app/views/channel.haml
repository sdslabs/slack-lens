%div{:class => 'container-fluid custom-fluid'}
  %div{:class => 'row custom-row'}
    / left-pannel : channel, status, search etc.
    %div{:class => 'col-md-2 channel-left'}
      / search channel
      %form{:class => 'search-form search-channel', :role => 'form'}
        %div{:class => 'form-group custom-form-group'}
          %input{:class => 'form-control input-lg', :type => 'text', :placeholder => "Search ##{locals[:value]}"}
      / channels list
      %div{:class => 'channels'}
        %h4{:class => 'channels-heading'}
          CHANNELS
        %ul
          - locals[:channels].each do |channel|
            %li{:class => 'channels-channel'}
              %a{:href => "/channel/#{channel}"}
                %span{:class => 'channels-prefix'}
                  ="#"
                %span{:class => 'channels-data'}
                  ="#{channel}"
      / user profile : settings/options
      %div{:class => 'user-section'}
        %div{:class => 'user-section-user'}
          %span{:class => 'user-section-user-name'}
            =(session[:user] || "pravj")
          %div{:class => 'user-section-user-online'}
            online
            %img{:src => 'data:image/png;base64,', :height => '10px', :width => '10px'}
    / right-pannel : messages related data
    %div{:class => 'col-md-7 channel-right'}
      %ul{:class => 'breadcrumb'}
        %li
          %a{:href => '/'}
            #{locals[:team]}
        %li
          %a{:href => '/channels'}
            Channels
        %li{:class => 'active'}
          #{locals[:value]}
      / message-box containg all messages
      %div{:class => 'message-box'}
        %div{:class => 'message-element'}
          %span{:class => 'message-user'}
            %a{:href => '/users/pravj'}
              pravj
          %span{:class => 'message-time'}
            %a{:href => '/message/1'}
              8:56 AM
          %div
            This is a test message
        
/ js things
